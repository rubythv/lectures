{
    "python.terminal.executeInFileDir": true,
    "git.rebaseWhenSync": true,
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python-envs.defaultEnvManager": "ms-python.python:conda",
    "python-envs.defaultPackageManager": "ms-python.python:conda",
    "python.REPL.sendToNativeREPL": true,

    "editor.lineHeight": 17,
    "breadcrumbs.enabled": false,
    "notebook.insertToolbarLocation": "notebookToolbar",
    "notebook.showCellStatusBar": "hidden",
    "notebook.cellToolbarLocation": {
        "jupyter-notebook": "hidden"
    },
    "notebook.globalToolbar": false,
    "notebook.consolidatedRunButton": true,

    "chat.disableAIFeatures": true,

    "inlineChat.lineEmptyHint": false,
    "python.analysis.addHoverSummaries": false,
    "python.analysis.supportDocstringTemplate": false,
    "editor.inlineSuggest.enabled": false,
    "editor.parameterHints.enabled": false,
    "editor.snippetSuggestions": "none",
    "jupyter.executionAnalysis.enabled": false,
    "workbench.settings.showAISearchToggle": false,
    "notebook.experimental.generate": false,
    "python.experiments.enabled": false,
    "notebook.output.scrolling": true
}
